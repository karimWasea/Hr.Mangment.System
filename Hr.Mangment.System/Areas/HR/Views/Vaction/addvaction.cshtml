@{
    ViewData["Title"] = "Edit SalaryTransaction";
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HR.ViewModel.VactionVm
<partial name="_AlertMessage" model="Model" />
<style>
    /* Custom CSS styles */
    .container {
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    .btn-secondary {
        margin-top: 10px;
    }

    /* Glass-like style for input fields */
    .form-control {
        border: none;
        border-bottom: 1px solid #ccc;
        background: transparent;
        margin: 10px;
        padding: 10px;
    }

    /* Even spacing for form rows */
    .form-row {
        display: flex;
        justify-content: space-between;
    }
</style>

<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Manage Vacation</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="StartDate">Starting Time:</label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="EndDate">Ending Time:</label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeName">Employee Name:</label>
                    <input asp-for="EmployeeName" class="form-control" readonly />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
                <div>

                    <button type="submit" id="savedata" class="btn btn-primary">Update</button>
                    <a asp-controller="TimeShift" asp-action="Index" class="btn btn-secondary mt-2">
                        <i class="fas fa-chevron-circle-left"></i> Back to Index
                    </a>
                </div>
            </form>

         
        </div>
    </div>
</div>

<script src="~/lib/select2/js/select2.min.js"></script>



<script>



    $(document).ready(function () {
        $('select').select2();
    });

</script>
