@{
    ViewData["Title"] = "Edit SalaryTransaction";
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HR.ViewModel.VactionVm
<partial name="_AlertMessage" model="Model" />
<style>
    /* Custom CSS styles */
    .container {
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    .btn-secondary {
        margin-top: 10px;
    }
</style>


<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />




<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit SalaryTransaction</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="StartDate">Starting Time:</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate">Starting Time:</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeName">Ending Time:</label>
                    <input asp-for="EmployeeName" class="form-control" readonly/>
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>



                

                <!-- Add 'multiple' attribute to the select elements to enable multiple selection -->



                <button type="submit" id="savedata" class="btn btn-primary">Update</button>
            </form>

            <a asp-controller="TimeShift" asp-action="Index" class="btn btn-secondary mt-2">
                <i class="fas fa-chevron-circle-left"></i> Back to Index
            </a>
        </div>
    </div>
</div>
<script src="~/lib/select2/js/select2.min.js"></script>



<script>



    $(document).ready(function () {
        $('select').select2();
    });

</script>
