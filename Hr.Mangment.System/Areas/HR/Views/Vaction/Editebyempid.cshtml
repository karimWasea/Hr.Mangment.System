@{
    ViewData["Title"] = " mange Vaction";
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HR.ViewModel.VactionVm
<partial name="_AlertMessage" model="Model" />




<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/css/vactionsaveeditepage.css" rel="stylesheet" />
<div class="container mt-5 glass-select">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Manage Vacation</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EmployeeId" />

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label">Starting Time:</label>
                        <input asp-for="StartDate" class="glass-input form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label">Ending Time:</label>
                        <input asp-for="EndDate" class="glass-input form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeName">Ending Time:</label>
                    <input asp-for="EmployeeName" class="form-control" readonly />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>

                <div class="button-group">
                    <a asp-controller="TimeShift" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-chevron-circle-left"></i> Back to Index
                    </a>
                    <button type="submit" id="savedata" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
        
    <script src="~/lib/select2/js/select2.min.js"></script>



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/curentweeksaveindex save.js"></script>
       
       




}


























