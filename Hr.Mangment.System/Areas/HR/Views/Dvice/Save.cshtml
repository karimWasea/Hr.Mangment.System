@{
    ViewData["Title"] = "Edit Device";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HR.ViewModel.Devicetvm
<partial name="_AlertMessage" model="Model" />
<link href="~/css/depatment.css" rel="stylesheet" />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 style="font-family: 'Arial', sans-serif;"> Mange Dvice</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data" class="glass-form">
                <input type="hidden" asp-for="Id" />


                    <div class="col">
                    <label asp-for="DeviceName" style="font-weight: bold;">DeviceName  :</label>
                        <input asp-for="DeviceName" class="form-control same-width" style="z-index: 1;" />
                        <span asp-validation-for="DeviceName" class="text-danger"></span>
                    </div>

                 

                <div class="button-group">
                    <button type="submit" id="savedata" class="btn btn-primary">
                        @if (Model.Id> 0)
                        {
                            @:Update
                        }
                        else
                        {
                            @:Add New
                        }
                    </button>
          <a asp-controller="Dvice" asp-action="Index" class="btn btn-secondary mt-2">
                        <i class="fas fa-chevron-circle-left"></i> Back Home
                    </a>
                </div>
            </form>


        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/js/depatment forsave.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
