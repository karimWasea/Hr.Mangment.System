@{
    ViewData["Title"] = "Edit/ EmployeeDEvice";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HR.ViewModel.EmployeeDeviceVm
<partial name="_AlertMessage" model="Model" />
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/css/employeedcice.css" rel="stylesheet"/>
<partial name="_AlertMessage" model="Model" />
<div class="container mt-5 glass-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Device</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input asp-for="EmployeeId" class="form-control" type="hidden" />

                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label asp-for="EmployeeName">EmployeeName:</label>
                        <input asp-for="EmployeeName" class="form-control" readonly />
                    </div>

                    <div class="form-group col-md-5">
                        <label asp-for="selectDeviceids" ></label>
                        <select class="glass-select form-select" asp-for="selectDeviceids" asp-items="Model.DisplayDeviceid"
                                data-placeholder="Select Shifts" multiple="multiple">

                            @*
                            this make Noseach
                            data-minimum-results-for-search="Infinity">

                            //  this is make it multiuble select

                            *@@* multiple="multiple" *@>
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="selectDeviceids
" class="text-danger"></span>
                    </div>
                </div>

            


                <div class="button-group">
                    <button type="submit" id="savedata" class="btn btn-primary">
                        @if (Model.Id > 0)
                        {
                            @:Update
                        }
                        else
                        {
                            @:Add New
                        }
                    </button>
                   

                    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary mt-2">
                        <i class="fas fa-chevron-circle-left"></i> Back Home
                    </a>
                    @* <a asp-area="HR" class=" btn btn-primary" asp-controller="EmployeeDevice" asp-action="GetAllAssinedDevice" data-action="delete"> *@
@*                     </a>
 *@                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    
    <script src="~/js/employeedevicsave.js"></script>

   }




















