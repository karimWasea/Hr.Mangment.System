@model HR.ViewModel.Depatmentvm

@{
    ViewData["Title"] = "Add/EditDepatment";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<partial name="_AlertMessage" model="Model" />
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Department</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="DepartmentName">Department Name:</label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ManagerId" class="form-label mt-4">Manager:</label>
                    <select class="form-select" asp-for="ManagerId" asp-items="Model.Mangers"
                            data-placeholder="Select manager">
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>

                <button type="submit" id="savedata" class="btn btn-primary">Update</button>
            </form>

            <a asp-controller="Department" asp-action="Index" class="btn btn-secondary mt-2">
                <i class="fas fa-chevron-circle-left"></i> Back to Index
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Initialize Select2 on all select elements
            $('select').select2();

            var saveForm = document.getElementById("saveform");
            var saveButton = document.getElementById("savedata");

            saveForm.addEventListener("submit", function (event) {
                event.preventDefault();

                Swal.fire({
                    title: "Are you sure?",
                    text: "You are about to update the department's information.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Yes, update it!",
                    cancelButtonText: "No, cancel",
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Submit the form if SweetAlert confirmation is accepted
                        saveForm.submit();
                    }
                });
            });
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
