
@{
    ViewData["Title"] = "Edit Employee";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HR.ViewModel.Depatmentvm
<partial name="_AlertMessage" model="Model" />
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Employee</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="DepartmentName">DepartmentName:</label>
                    <input asp-for="DepartmentName" class="form-control" />
                </div>

               

                <div class="form-group">
                    <label asp-for="ManagerId" class="form-label mt-4"></label>
                    <select class="form-select" asp-for="ManagerId" asp-items="Model.Mangers"
                            data-placeholder="Select devices">
                            
                            @* 
                             this make Noseach   
                            data-minimum-results-for-search="Infinity">

                      //  this is make it multiuble select

                        *@@* multiple="multiple" *@>
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>

                <button type="submit" id="savedata" class="btn btn-primary">Update</button>
            </form>

            <a asp-controller="Depatment" asp-action="Index" class="btn btn-secondary mt-2">
                <i class="fas fa-chevron-circle-left"></i> Back to Index
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Initialize Select2 on all select elements
            $('select').select2();

            var saveForm = document.getElementById("saveform");
            var saveButton = document.getElementById("savedata");

            saveForm.addEventListener("submit", function (event) {
                event.preventDefault();

                Swal.fire({
                    title: "Are you sure?",
                    text: "You are about to update the employee's information.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Yes, update it!",
                    cancelButtonText: "No, cancel",
                }).then((result) => {
                    if (result.isConfirmed) {
                        // You can also add additional form validation here
                        saveForm.submit();
                    }
                });
            });
        });
    </script>


    <style>
        /* Custom CSS styles */
        .container {
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
        }

        .btn-secondary {
            margin-top: 10px;
        }
    </style>
}










