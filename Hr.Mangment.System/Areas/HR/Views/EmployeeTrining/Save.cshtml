
@{
    ViewData["Title"] = " mange Trining";
    Layout = "_Layout";

}

<h1>mange Trining</h1>

 

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HR.ViewModel.EmployeeTrininTVm
<partial name="_AlertMessage" model="Model" />
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />

<link href="~/css/employeetriningsave.css" rel="stylesheet" />
<partial name="_AlertMessage" model="Model" />
<div class="container mt-5 glass-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Mang TriningForEmployee</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input asp-for="EmployeeId" class="form-control" type="hidden" />

             
               <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="EmployeeName">EmployeeName:</label>
                    <input asp-for="EmployeeName" class="form-control" readonly />
                </div>

                <div class="form-group col-md-5">
                        <label asp-for="selectTriningids"></label>
                        <select class="glass-select form-select" asp-for="selectTriningids" asp-items="Model.DisplayTrining"
                            data-placeholder="Select Shifts" multiple="multiple">


                        @*
                        this make Noseach
                        data-minimum-results-for-search="Infinity">

                        //  this is make it multiuble select

                        *@@* multiple="multiple" *@>
                        <option value=""></option>
                    </select>
                        <span asp-validation-for="selectTriningids
" class="text-danger"></span>
                </div>
        </div>



        <div class="button-group">
                    <button type="submit" id="savedata" class="btn btn-primary">
                        @if (Model.Id > 0)
                        {
                            @:Update
                        }
                        else
                        {
                            @:Add New
                        }
                    </button>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary mt-2">
                        <i class="fas fa-chevron-circle-left"></i> Back Home
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
 
    <script src="~/js/employeetriningsave.js"></script>
   
}




















